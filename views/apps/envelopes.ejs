        console.log(e);
      });

      envelopeEdit.querySelector('.controls .envelope-name').addEventListener('click', e => {
        envelopeEdit.classList.add('hidden');
        envelopeView.classList.remove('hidden');
      });

      envelopeIcon.addEventListener('click', e => {
        createEnvelopeForm.classList.toggle('hidden');
      });

      document.querySelectorAll('.envelope').forEach(envelope => {
        envelope.addEventListener('click', e => {
          const envName = envelope.querySelector('label').textContent;
          const envAmount = envelope.querySelector('.amount').textContent;

          envelopeEdit.querySelector('.envelope-name .name').textContent = envName;
          envelopeEdit.querySelector('.envelope-name .amount').textContent = envAmount;

          envelopeView.classList.add('hidden');
          envelopeEdit.classList.remove('hidden');
        });
      });
