<!DOCTYPE html>
<html>
  <head>
    <%
      var page = page || {};
      page.title = "Apps";

      links = [
        { title: "Recipe Beautifier", href: "/apps/recipe"     , desc: "Adds printer-friendly styles to user-provided values to make a clean, readable recipe"    },
        { title: "Pick a Number"    , href: "/apps/pick-number", desc: "Makes it easier to assign random numbers to different options, useful for decision making"}
      ];
    %>
    <% include ../partials/head-tags %>
    <style>

    </style>
  </head>

  <body>
    <div>
      <% include ../partials/header %>
      <main>
        <div>
          <h1>Apps</h1>
          <p>
            The following is a list of the apps I have on this site. More
            information about each app is on its page.
          </p>
          <ul class="arrow-list">
            <% for (var i = 0, link; i < links.length; i++) { %>
              <% link = links[i]; %>
              <li>
                <a href="<%- link.href %>"><%- link.title %></a>
                <div class="more-link">
                  <span class="fake-link">More...</span>
                  <span class="hidden"><%- link.desc %></span>
                </div>
              </li>
            <% } %>
          </ul>
        </div>
      </main>
      <% include ../partials/footer %>
    </div>

    <script type="text/javascript">
      Array.from(document.querySelectorAll('.more-link')).forEach(function(elem) {
        elem.addEventListener('click', function() {
          debugger;
          var anchor = elem.querySelector('span.fake-link');
          var span = elem.querySelectorAll('span')[1];
          if (anchor.textContent === 'More...') {
            anchor.textContent = 'Hide';
            span.classList.remove('hidden');
          } else {
            anchor.textContent = 'More...';
            span.classList.add('hidden');
          }
        })
      })
    </script>
  </body>
</html>
