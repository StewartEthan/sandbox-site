header {
  background-color: #002265;
  color: white;
  font-family: "Courier New", Courier, monospace;
  margin: 0px;
  padding: 30px;
  text-shadow: 2px 2px 4px black;

  div {
    display: flex;
    margin: auto;
    width: 100%;

    a {
      color: white;
      display: flex;
      font-size: 6em;
      margin: auto;
      padding: 5px;
      text-decoration: none;

      img {
        margin: auto;
        width: auto;
      } /* img */
    } /* a */
  } /* div */
} /* header */

@media print {
  header {
    display: none;
  }
}
