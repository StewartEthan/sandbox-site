/*Styles for the body*/
html, body {
  margin: 0;
  padding: 0;
}

html {
  height: 100%;
}

body {
  background-image: url(../../img/computer-code-blue.jpg);
  background-repeat: repeat;
  background-attachment: fixed;
  height: 100%;

  & > div {
    height: 100%;
    margin: auto;
    max-width: 90%;

    main {
      background-color: white;
      font-family: Verdana, sans-serif;
      font-size: 1em;
      min-height: 100%;
      padding: 30px;
      overflow: auto;

      & > div {
        background-color: white;
        width: 80%;
        max-width: 1200px;
        margin: 0 auto;

        & > h1 {
          font-family: "Trebuchet MS", sans-serif;
        }
      } /* main > div */
    } /* main */
  } /* body > div */
} /* body */

@media print {
  .print-hide {
    display: none;
  }
}
