// Styles for the body
:root
  font-size 16px

html, body
  margin 0
  padding 0

body
  background-image url(../../img/computer-code-blue.jpg)
  background-repeat repeat
  background-attachment fixed

  & > div
    display flex
    flex-direction column;
    height 100vh
    margin auto
    max-width 1000px
    min-height $doc-min-height
    min-width 310px

    main
      background-color white
      flex-grow 1
      font-family $primary-font
      font-size 1em
      padding 10px

      & > div
        background-color white
        line-height 25px
        max-width 1200px
        margin 0 auto
        width 85%

        & > h1
          font-family $heading-font

        a
          color $primary-blue
          font-family "Trebuchet MS", Helvetica, sans-serif
          font-size 13pt

@media print
  .print-hide
    display none
