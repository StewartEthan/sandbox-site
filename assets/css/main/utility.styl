@media all {
  .arrow-list {
    list-style: none;
    margin-left: -15px;

    li:before {
      content: "\27A5\00a0";
    }
  }

  .custom-button {
    background-color: #002265;
    border-radius: 10px;
    cursor: pointer;
    color: white;
    font-size: 1.5em;
    margin: 20px auto;
    text-align: center;
    text-shadow: 1.5px 1.5px 3px black;
    /*width: 20%;*/
    padding: 7px;
  }

  .error {
    color: red;
  }

  .fake-link {
    color: #002265;
    cursor: pointer;
    font-family: "Trebuchet MS", Helvetica, sans-serif;
    font-size: 13pt;
    text-decoration: underline;
  }

  .force-block {
    display: block;
  }

  .hidden {
    display: none;
  }

  .invis {
    visibility: hidden;
  }

  .spinner {
    border: 16px solid #f3f3f3;
    border-top: 16px solid #002265;
    border-right: 16px solid #002265;
    border-radius: 50%;
    margin: 10px auto;
    width: 120px;
    height: 120px;
    animation: spin 1.5s linear infinite;
  }
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
}
