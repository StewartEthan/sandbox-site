@media all {
  .custom-button {
    background-color: #002265;
    border-radius: 10px;
    cursor: pointer;
    color: white;
    font-size: 1.5em;
    margin: 20px auto;
    text-align: center;
    text-shadow: 1.5px 1.5px 3px black;
    /*width: 20%;*/
    padding: 7px;
  }

  .hidden {
    display: none;
  }

  .invis {
    visibility: hidden;
  }
}
